<!DOCTYPE html>
<html>

<head>
  <title>Books Page</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag 'book/index', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="header-title">
    <h1>Book</h1>
  </div>
  <div class="header">
    <div class="left-header">
      <%= link_to 'Home', root_path, class: 'btn-home' %>
    </div>
  </div>

  <div class="book-index">
    <div class="book-box">
      <div class="scores-container">

        <!--- 登録 --->
        <div class="new-book-form">
          <%= form_with(model: @book, local: true) do |form| %>
            <% if @book.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= form.label :book_title %>
              <%= form.text_field :book_title %>
            </div>

            <div class="field">
              <%= form.label :author %>
              <%= form.text_field :author %>
            </div>

            <div class="field">
              <%= form.label :review %>
              <%= form.text_area :review %>
            </div>

            <div class="field">
              <%= form.label :rating %>
              <%= form.number_field :rating, in: 1..5 %>
            </div>

            <div class="field">
              <%= form.label :registration_date %>
              <%= form.date_field :registration_date %>
            </div>

            <div class="actions">
              <%= form.submit "Save" %>
            </div>
          <% end %>
        </div>

        <!--- 一覧表示　--->
        <div class="books-container">
          <h2>Book List</h2>
          <% @books.each do |book| %>
            <div class="book-item">
              <p>Title: <%= book.book_title %></p>
              <p>Author: <%= book.author %></p>
              <p>Review: <%= book.review %></p>
              <p>Rating: <%= book.rating %></p>
              <p>Registration Date: <%= book.registration_date %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>