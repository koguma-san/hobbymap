<h1>スコア登録ページ</h1>
<%= form_with(model: @round, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :course, 'コース名' %>
    <%= form.text_field :course, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :round_date, 'ラウンド日' %>
    <%= form.date_field :round_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :round_memo, 'メモ' %>
    <%= form.text_area :round_memo, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit '登録', class: 'btn btn-primary' %>
  </div>
<% end %>