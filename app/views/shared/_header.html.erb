<%# CSS・・・assets/stylesheets/shared/header.css %>
<!DOCTYPE html>

<body>
  <header class='top-page-header'>
    <div class='nav'>
      <ul class='lists-btn'>
        <% if user_signed_in? %>
          <li><%= link_to current_user.name, "#", class: "user-name" %></li> 
          <li><%= link_to 'LOG OUT', destroy_user_session_path, data: { turbo_method: :delete }, class: "top-logout-btn" %></li>

        <% else %>  
          <li><%= link_to 'LOGIN!', new_user_session_path, class: "top-login-btn" %></li>
          <li><%= link_to 'SIGN UP!', new_user_registration_path, class: "sign-up-btn" %></li>
        <% end %> 
      </ul>
    </div>
  </header>
</body>